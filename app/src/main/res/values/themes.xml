<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyFood" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <!--<item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowDisablePreview">true</item>
        <item name="windowSplashScreenBackground">@color/orange_light</item>
        <item name="android:windowBackground">@color/orange_light</item>
        <item name="android:statusBarColor">@color/orange_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryDark">@color/orange_light</item>
        <item name="colorOnPrimary">@color/orange_light</item>
    </style>
    
    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/orange_light</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonStyleClick">
        <item name="android:backgroundTint">@color/orange_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="showActionMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/radius_img</item>
    </style>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/orange_light</item>
        <item name="windowSplashScreenAnimatedIcon">@style/Widget.AppCompat.Light.DropDownItem.Spinner</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.MyFood</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowSplashScreenBackground">@color/orange_light</item>
        <item name="android:windowBackground">@drawable/splasscreenbg</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.MyFood" parent="Base.Theme.MyFood" />
</resources>